{
  "name": "demo-nest-next",
  "version": "0.0.1",
  "description": "",
  "author": "makamekm",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf dist demo-nest-api",
    "build": "run-p build:ui build:api",
    "build:api": "nest build",
    "build:ui": "next build",
    "build-tailwind": "tailwindcss build src/tailwind.css -o src/tailwind.generated.css",
    "exec": "cross-env ENV=prod NODE_ENV=production node -r ./tsconfig-paths-bootstrap.js -r ts-node/register ./src/main.ts",
    "format": "prettier --write \"src/**/*.{tsx,ts,js,jsx}\" \"test/**/*.ts\"",
    "start": "nodemon --watch src -e ts --exec \"npm run start:dev || exit 1\"",
    "start:dev": "cross-env ENV=dev node -r ./tsconfig-paths-bootstrap.js -r ts-node/register ./src/main.ts",
    "prod": "cross-env NODE_ENV=production node ./dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{tsx,ts,js,jsx}\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.{tsx,ts,js,jsx}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ./tsconfig-paths-bootstrap.js -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pkg": "pkg ./dist/main.js --targets node12-macos-x64 --config package.json --output ./demo-nest-api",
    "commit": "cz",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/microservices": "^7.5.1",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/serve-static": "^2.1.3",
    "@nestjs/typeorm": "^7.1.4",
    "@nestpress/next": "^1.2.3",
    "amqp-connection-manager": "^3.2.1",
    "amqplib": "^0.6.0",
    "lodash": "^4.17.20",
    "mysql": "^2.18.1",
    "next": "^11.1.1",
    "node-fetch": "^2.6.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-spring": "^8.0.27",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "sass": "^1.28.0",
    "sqlite3": "^5.0.0",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.2",
    "@nestjs/testing": "^7.5.1",
    "@types/express": "^4.17.8",
    "@types/jest": "26.0.15",
    "@types/node": "^14.14.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/lodash": "^4.14.164",
    "mobx": "^6.0.2",
    "mobx-react": "^7.0.0",
    "mobx-utils": "^6.0.1",
    "moment": "^2.29.1",
    "classnames": "^2.2.6",
    "eslint": "7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "react-scripts": "4.0.0",
    "jest": "26.6.2",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "26.4.3",
    "ts-loader": "^8.0.7",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "lint-staged": "^10.5.1",
    "pkg": "^4.4.9",
    "styled-jsx": "^3.3.1",
    "tailwindcss": "^1.9.6",
    "react-service-provider": "^1.2.1",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.0",
    "semantic-release": "^17.2.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.6",
    "@semantic-release/release-notes-generator": "^9.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js",
      ".next/**/*.js"
    ],
    "assets": [
      "dist/**/*.js.map",
      "public/**/*",
      ".next/**/*"
    ]
  }
}
